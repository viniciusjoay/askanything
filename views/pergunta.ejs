<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>
<body>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
            <textarea placeholder="Digite a sua resposta" class="form-control" name="corpo"></textarea>
            <br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id%>">
            <button type="submit" class="btn btn-success">Responder</button>
        </form>    
        <hr>
        <h3> Respostas </h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <div class="card">
                <div class="card-body">
                    <%= resposta.corpo %> <br>
                </div>
            </div>
            <br>
        <% }) %>
    </div>
</body>
<%- include('partials/footer.ejs') %>