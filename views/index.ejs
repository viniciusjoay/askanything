<%- include('partials/header.ejs') %>
<%- include('partials/navbar.ejs') %>
<body>
    <div class="container">
        <hr>
            <h1>Perguntas</h1>
        <hr>
        <% perguntas.forEach(pergunta =>{ %>
            <br>    
            <div class="card">
                <div class="card-body">
                    <h3>
                        <%= pergunta.titulo %>
                    </h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id%>"><button class="btn btn-success">Responder</button></a>
                </div>    
            </div>
        <% }) %>
    </div>
</body>
